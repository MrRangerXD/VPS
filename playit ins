#!/bin/bash
# Playit installation script - Auto Installer Made by <3 ZenseiTech
# Tested on Ubuntu/Debian by ZenseiTech
# made by ZenseiTech

set -e

echo "=== Zensei: Updating system ==="
sudo apt update -y && sudo apt upgrade -y

echo "=== Zensei: Installing required dependencies ==="
sudo apt install -y sudo curl gpg

echo "=== Zensei: Adding Playit APT repository ==="
curl -fsSL https://playit-cloud.github.io/ppa/key.gpg | \
  gpg --dearmor | sudo tee /etc/apt/trusted.gpg.d/playit.gpg >/dev/null

echo "deb [signed-by=/etc/apt/trusted.gpg.d/playit.gpg] https://playit-cloud.github.io/ppa/data ./" | \
  sudo tee /etc/apt/sources.list.d/playit-cloud.list

echo "=== Zensei: Updating package list ==="
sudo apt update -y

echo "=== Zensei: Installing Playit ==="
sudo apt install -y playit

echo "=== Zensei: Enabling Playit service ==="
sudo systemctl enable --now playit

echo "=== Zensei: Running Playit setup ==="
playit setup

echo "✅ Zensei: Playit installation complete!"
echo "➡️ Zensei: Run 'playit status' to check the tunnel status."
